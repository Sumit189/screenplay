{
  "version": 2,
  "builds": [
    { 
      "src": "frontend/package.json", 
      "use": "@vercel/static-build", 
      "config": { 
        "distDir": "build",
        "buildCommand": "cd frontend && npm install && npm run build" 
      }
    },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/socket", "dest": "/api/socket.js" },
    { "src": "/api/get-ip", "dest": "/api/get-ip.js" },
    { "src": "/api/ice-servers", "dest": "/api/ice-servers.js" },
    { "src": "/socket.io/(.*)", "dest": "/api/socket.js" },
    { 
      "src": "/static/(.*)", 
      "dest": "/frontend/build/static/$1" 
    },
    { 
      "src": "/favicon.ico", 
      "dest": "/frontend/build/favicon.ico" 
    },
    { 
      "src": "/manifest.json", 
      "dest": "/frontend/build/manifest.json" 
    },
    { 
      "src": "/(.*).png", 
      "dest": "/frontend/build/$1.png" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/frontend/build/index.html" 
    }
  ]
} 